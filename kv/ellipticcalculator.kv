
<PatternTextInput>:
    canvas.after:
        Color:
            rgba: root.border_color
        Line:
            rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1])
            width: self.size[1] / 30



    font_size: self.height * .5

<EllipticCalculator>:
    curve_data: curve_data
    entry: entry
    result: result

    orientation: 'vertical'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            size_hint_x: .8
            orientation: 'vertical'
            Widget:
                size_hint_y: .065

            BoxLayout:
                size_hint_y: .065

                Label:
                    text: 'E'
                    size_hint: .3, 1
                    font_size: self.height * .9
                    text_size: self.size
                    texture_size: self.size

                    halign: 'right'


                PatternTextInput:
                    id: curve_data
                    size_hint_x: .7
                    name: 'curve_data'
                    hint_text: 'Параметры кривой'
                    pat: '0123456789(),-'
                    on_text: root.calculate()

            Widget:
                size_hint_y: .06

            PatternTextInput:
                size_hint_y: .065
                id: entry
                name: 'entry'
                hint_text: 'Формула'
                pat: '0123456789(),-+*'
                on_text: root.calculate()

            Widget:
                size_hint_y: .02

            PatternTextInput:
                size_hint_y: .065
                id: result
                name: 'result'
                hint_text: 'Результат'
                pat: ''

            Widget:
                size_hint_y: .66
